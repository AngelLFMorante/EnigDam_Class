<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zone_first"
    tools:context=".Game.Zone1">

    <Button
        android:id="@+id/btnPrevious"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/left_arrow"
        android:contentDescription="@string/previous_fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.982" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/right_arrow"
        android:contentDescription="@string/next_fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.982" />

    <ImageView
        android:id="@+id/lampHint"
        android:layout_width="60dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/lamp_hint"
        android:src="@drawable/lamp_off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.968"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBriefcaseClose"
        android:layout_width="112dp"
        android:layout_height="86dp"
        android:background="@drawable/zone1_briefcase_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.205"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.821" />

    <Button
        android:id="@+id/btnBriefcaseOpen"
        android:layout_width="112dp"
        android:layout_height="90dp"
        android:background="@drawable/zone1_briefcase_open"
        android:elevation="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.205"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.819" />

    <Button
        android:id="@+id/btnBriefcaseTest"
        android:layout_width="112dp"
        android:layout_height="90dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/zone1_briefcase_void"
        android:elevation="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.205"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.819" />

    <ImageView
        android:id="@+id/binaryTest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/test_binary"
        android:elevation="4dp"
        android:src="@drawable/zone1_binary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imgComputer"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginTop="11dp"
        android:background="@color/black"
        android:contentDescription="@string/computer_test"
        android:elevation="0dp"
        android:src="@drawable/zone1_computer"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.418" />

    <Button
        android:id="@+id/btnAutowiredConnect"
        android:layout_width="42dp"
        android:layout_height="21dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/zone1_autowired"
        android:elevation="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.621" />

    <Button
        android:id="@+id/drawerClose"
        android:layout_width="111dp"
        android:layout_height="93dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/zone1_drawer_close"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.701" />

    <Button
        android:id="@+id/drawerOpen"
        android:layout_width="124dp"
        android:layout_height="92dp"
        android:layout_marginStart="90dp"
        android:background="@drawable/zone1_drawer_open"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.965"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.73" />

    <Button
        android:id="@+id/btnAutowiredDrawer"
        android:layout_width="46dp"
        android:layout_height="21dp"
        android:background="@drawable/zone1_autowired"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.908"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.766" />

    <LinearLayout
        android:id="@+id/linearPuzzle"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@color/white"
        android:elevation="6dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/binaryTest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:id="@+id/gridPuzzle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="30dp"
            android:columnCount="3"
            android:rowCount="3">

            <Button
                android:id="@+id/A1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:background="#494848" />

            <Button
                android:id="@+id/A2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_margin="10dp"
                android:background="#494848" />

            <Button
                android:id="@+id/A3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="10dp"
                android:background="#494848" />

            <Button
                android:id="@+id/B1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:background="#494848" />

            <Button
                android:id="@+id/B2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_margin="10dp"
                android:background="#494848" />

            <Button
                android:id="@+id/B3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_margin="10dp"
                android:background="#494848" />

            <Button
                android:id="@+id/C1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:background="#494848" />

            <Button
                android:id="@+id/C2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_margin="10dp"
                android:background="#494848" />

            <Button
                android:id="@+id/C3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_margin="10dp"
                android:background="#494848" />

        </GridLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/down_arrow"
        android:contentDescription="@string/previous_fragment"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/binaryTest"
        app:layout_constraintEnd_toStartOf="@+id/btnNext"
        app:layout_constraintStart_toEndOf="@+id/btnPrevious"
        app:layout_constraintTop_toBottomOf="@+id/linearPuzzle" />

    <ImageView
        android:id="@+id/zone3PenDriveScreen"
        android:layout_width="41dp"
        android:layout_height="47dp"
        android:contentDescription="@string/pen_drive"
        android:src="@drawable/zone3_pen"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.956" />

    <ImageView
        android:id="@+id/zone2KeyScreen"
        android:layout_width="41dp"
        android:layout_height="47dp"
        android:contentDescription="@string/pen_drive"
        android:src="@drawable/zone2_key"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.956" />

</androidx.constraintlayout.widget.ConstraintLayout>