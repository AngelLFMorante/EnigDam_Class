<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".Game.EndGame">

    <ImageView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:background="@drawable/tittle"
        android:contentDescription="@string/game_tittle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027" />

    <Button
        android:id="@+id/buttonsBack"
        android:layout_width="94dp"
        android:layout_height="86dp"
        android:layout_marginTop="216dp"
        android:background="@drawable/button_x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.868"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

                    <!--LEVEL COMPLETE EASY-->
    <ImageView
        android:id="@+id/levelCompleteNormal"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="300dp"
        android:background="@drawable/level_complete_normal"
        android:contentDescription="@string/level_complete"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.085" />

    <TextView
        android:id="@+id/gameOverNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="228dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="227dp"
        android:layout_marginBottom="443dp"
        android:fontFamily="@font/slackey"
        android:text="@string/game_over"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/levelCompleteNormal"
        app:layout_constraintEnd_toEndOf="@+id/levelCompleteNormal"
        app:layout_constraintStart_toStartOf="@+id/levelCompleteNormal"
        app:layout_constraintTop_toTopOf="@+id/levelCompleteNormal" />

    <TextView
        android:id="@+id/endTimeNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="404dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="152dp"
        android:fontFamily="@font/slackey"
        android:text="@string/time_default"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/levelCompleteNormal"
        app:layout_constraintStart_toStartOf="@+id/levelCompleteNormal"
        app:layout_constraintTop_toTopOf="@+id/levelCompleteNormal" />

    <TextView
        android:id="@+id/endScoreNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="414dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="161dp"
        android:fontFamily="@font/slackey"
        android:text="@string/score_default"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/levelCompleteNormal"
        app:layout_constraintEnd_toEndOf="@+id/levelCompleteNormal"
        app:layout_constraintStart_toStartOf="@+id/levelCompleteNormal"
        app:layout_constraintTop_toBottomOf="@+id/endTimeNormal" />

                            <!--LEVEL COMPLETE HARD-->
    <ImageView
        android:id="@+id/levelCompleteHard"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="300dp"
        android:background="@drawable/level_complete_hard"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.085"
        android:contentDescription="@string/level_complete_hard" />

    <TextView
        android:id="@+id/gameOverHard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="228dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="227dp"
        android:layout_marginBottom="443dp"
        android:fontFamily="@font/slackey"
        android:text="@string/game_over"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/levelCompleteHard"
        app:layout_constraintEnd_toEndOf="@+id/levelCompleteHard"
        app:layout_constraintStart_toStartOf="@+id/levelCompleteHard"
        app:layout_constraintTop_toTopOf="@+id/levelCompleteHard" />

    <TextView
        android:id="@+id/endTimeHard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="404dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="152dp"
        android:fontFamily="@font/slackey"
        android:text="@string/time_default"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/levelCompleteHard"
        app:layout_constraintStart_toStartOf="@+id/levelCompleteHard"
        app:layout_constraintTop_toTopOf="@+id/levelCompleteHard" />

    <TextView
        android:id="@+id/endScoreHard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="414dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="161dp"
        android:fontFamily="@font/slackey"
        android:text="@string/score_default"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/levelCompleteHard"
        app:layout_constraintEnd_toEndOf="@+id/levelCompleteHard"
        app:layout_constraintStart_toStartOf="@+id/levelCompleteHard"
        app:layout_constraintTop_toBottomOf="@+id/endTimeHard" />


</androidx.constraintlayout.widget.ConstraintLayout>