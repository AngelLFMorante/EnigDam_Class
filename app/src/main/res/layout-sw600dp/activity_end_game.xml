<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".Game.EndGame">

    <ImageView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:background="@drawable/tittle"
        android:contentDescription="@string/game_tittle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027" />

    <Button
        android:id="@+id/buttonsBack"
        android:layout_width="94dp"
        android:layout_height="86dp"
        android:layout_marginTop="216dp"
        android:background="@drawable/button_x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.868"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--LEVEL COMPLETE LOSE-->
    <ImageView
        android:id="@+id/levelCompleteLose"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="300dp"
        android:background="@drawable/level_complete_lose"
        android:contentDescription="@string/level_complete_lose"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.085" />

    <TextView
        android:id="@+id/gameOverLose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="228dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="227dp"
        android:layout_marginBottom="443dp"
        android:fontFamily="@font/slackey"
        android:text="@string/game_over"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/levelCompleteLose"
        app:layout_constraintEnd_toEndOf="@+id/levelCompleteLose"
        app:layout_constraintStart_toStartOf="@+id/levelCompleteLose"
        app:layout_constraintTop_toTopOf="@+id/levelCompleteLose" />

    <TextView
        android:id="@+id/endTimeLose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="404dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="152dp"
        android:fontFamily="@font/slackey"
        android:text="@string/time_default"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/levelCompleteLose"
        app:layout_constraintStart_toStartOf="@+id/levelCompleteLose"
        app:layout_constraintTop_toTopOf="@+id/levelCompleteLose" />

    <TextView
        android:id="@+id/endScoreLose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="414dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="161dp"
        android:fontFamily="@font/slackey"
        android:text="@string/score_default"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/levelCompleteLose"
        app:layout_constraintEnd_toEndOf="@+id/levelCompleteLose"
        app:layout_constraintStart_toStartOf="@+id/levelCompleteLose"
        app:layout_constraintTop_toBottomOf="@+id/endTimeLose" />

    <!--LEVEL COMPLETE WIN-->
    <ImageView
        android:id="@+id/levelCompleteWin"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="300dp"
        android:background="@drawable/level_complete_win"
        android:contentDescription="@string/level_complete_win"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.085" />

    <TextView
        android:id="@+id/gameOverWin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="228dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="227dp"
        android:layout_marginBottom="443dp"
        android:fontFamily="@font/slackey"
        android:text="@string/game_over"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/levelCompleteWin"
        app:layout_constraintEnd_toEndOf="@+id/levelCompleteWin"
        app:layout_constraintStart_toStartOf="@+id/levelCompleteWin"
        app:layout_constraintTop_toTopOf="@+id/levelCompleteWin" />

    <TextView
        android:id="@+id/endTimeWin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="404dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="152dp"
        android:fontFamily="@font/slackey"
        android:text="@string/time_default"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/levelCompleteWin"
        app:layout_constraintStart_toStartOf="@+id/levelCompleteWin"
        app:layout_constraintTop_toTopOf="@+id/levelCompleteWin" />

    <TextView
        android:id="@+id/endScoreWin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="414dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="161dp"
        android:fontFamily="@font/slackey"
        android:text="@string/score_default"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/levelCompleteWin"
        app:layout_constraintEnd_toEndOf="@+id/levelCompleteWin"
        app:layout_constraintStart_toStartOf="@+id/levelCompleteWin"
        app:layout_constraintTop_toBottomOf="@+id/endTimeWin" />


</androidx.constraintlayout.widget.ConstraintLayout>