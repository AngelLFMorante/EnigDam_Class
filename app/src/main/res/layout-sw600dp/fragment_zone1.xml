<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zone_first"
    tools:context=".Game.Zone1">

    <Button
        android:id="@+id/btnPrevious"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="890dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/left_arrow"
        android:contentDescription="@string/previous_fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnNext"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/right_arrow"
        android:contentDescription="@string/next_fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnBriefcaseClose"
        android:layout_width="201dp"
        android:layout_height="179dp"
        android:background="@drawable/zone1_briefcase_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.82" />

    <Button
        android:id="@+id/btnBriefcaseOpen"
        android:layout_width="176dp"
        android:layout_height="208dp"
        android:background="@drawable/zone1_briefcase_open"
        android:elevation="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.786" />

    <Button
        android:id="@+id/btnBriefcaseTest"
        android:layout_width="176dp"
        android:layout_height="208dp"
        android:background="@drawable/zone1_briefcase_void"
        android:visibility="gone"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.217"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.78" />

    <ImageView
        android:id="@+id/binaryTest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/test_binary"
        android:src="@drawable/zone1_binary"
        android:visibility="gone"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imgComputer"
        android:layout_width="180dp"
        android:layout_height="92dp"
        android:src="@drawable/zone1_computer"
        android:visibility="gone"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.437"
        android:contentDescription="@string/computer_test" />

    <Button
        android:id="@+id/btnAutowiredConnect"
        android:layout_width="73dp"
        android:layout_height="43dp"
        android:background="@drawable/zone1_autowired"
        android:elevation="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.299"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.645" />

    <Button
        android:id="@+id/drawerClose"
        android:layout_width="190dp"
        android:layout_height="200dp"
        android:background="@drawable/zone1_drawer_close"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.714" />

    <Button
        android:id="@+id/drawerOpen"
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:background="@drawable/zone1_drawer_open"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.964"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.742" />

    <Button
        android:id="@+id/btnAutowiredDrawer"
        android:layout_width="73dp"
        android:layout_height="43dp"
        android:background="@drawable/zone1_autowired"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.908"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.766" />

    <ImageView
        android:id="@+id/lampHint"
        android:layout_width="84dp"
        android:layout_height="81dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/lamp_off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.968"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/lamp_hint" />

    <LinearLayout
        android:id="@+id/linearPuzzle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="6dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/binaryTest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:id="@+id/gridPuzzle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3">

            <Button
                android:id="@+id/A1"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="30dp"
                android:background="#494848" />

            <Button
                android:id="@+id/A2"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_margin="30dp"
                android:background="#494848" />

            <Button
                android:id="@+id/A3"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="30dp"
                android:background="#494848" />

            <Button
                android:id="@+id/B1"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_margin="30dp"
                android:background="#494848" />

            <Button
                android:id="@+id/B2"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_margin="30dp"
                android:background="#494848" />

            <Button
                android:id="@+id/B3"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_margin="30dp"
                android:background="#494848" />

            <Button
                android:id="@+id/C1"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_margin="30dp"
                android:background="#494848" />

            <Button
                android:id="@+id/C2"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_margin="30dp"
                android:background="#494848" />

            <Button
                android:id="@+id/C3"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_margin="30dp"
                android:background="#494848" />


        </GridLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        android:layout_marginStart="395dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="390dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/down_arrow"
        android:contentDescription="@string/previous_fragment"
        app:layout_constraintBottom_toBottomOf="@+id/binaryTest"
        app:layout_constraintEnd_toStartOf="@+id/btnNext"
        app:layout_constraintStart_toEndOf="@+id/btnPrevious"
        app:layout_constraintTop_toBottomOf="@+id/linearPuzzle" />

    <ImageView
        android:id="@+id/zone2KeyScreen"
        android:layout_width="142dp"
        android:layout_height="114dp"
        android:layout_marginStart="443dp"
        android:layout_marginEnd="400dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/zone2_key"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnNext"
        app:layout_constraintStart_toEndOf="@+id/btnPrevious"
        android:contentDescription="@string/key" />

    <ImageView
        android:id="@+id/zone3PenDriveScreen"
        android:layout_width="142dp"
        android:layout_height="114dp"
        android:layout_marginStart="443dp"
        android:layout_marginEnd="400dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/pen_drive"
        android:src="@drawable/zone3_pen"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnNext"
        app:layout_constraintStart_toEndOf="@+id/btnPrevious" />


</androidx.constraintlayout.widget.ConstraintLayout>